<form class="form-horizontal" method="post">
    <fieldset>
        <legend>Account register</legend>
        <div class="control-group">
            <label class="control-label" for="username">Username</label>
            <div class="controls">
                <input type="text" class="input-xlarge" id="username" name="username">
                <p class="help-block">Your account name, use for logining</p>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password">Password</label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="password" name="password">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="password-repeat">Repeat password</label>
            <div class="controls">
                <input type="password" class="input-xlarge" id="password-repeat"
                name="password-repeat">
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">register</button>
        </div>
    </fieldset>
</form>